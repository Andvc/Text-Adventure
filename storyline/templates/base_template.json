{
  "template_id": "base_template",
  "name": "基础故事模板",
  "description": "一个通用的故事模板，可以作为其他模板的基础",
  "version": "1.0",
  "author": "系统",
  "created_at": "2025-04-09",
  "tags": [
    "基础",
    "通用"
  ],
  "prompt_segments": [
    "(世界设定: {world_setting})",
    "(角色名称: {character.name})",
    "(角色背景: {character.background})",
    "(角色属性: 力量={character.strength}, 敏捷={character.agility}, 智力={character.intelligence}, 体质={character.constitution}, 魅力={character.charisma})",
    "(角色技能: {character.skills})",
    "(场景: {scene})",
    "<描述一段故事情节>",
    "{story=\"*\"}",
    "<提供三个可能的选择>",
    "{choice1=\"*\", choice2=\"*\", choice3=\"*\"}",
    "<描述每个选择可能带来的属性变化>",
    "{stat_change1=\"*\", stat_change2=\"*\", stat_change3=\"*\"}"
  ],
  "required_inputs": [
    "world_setting",
    "character.name",
    "character.background",
    "character.strength",
    "character.agility",
    "character.intelligence",
    "character.constitution",
    "character.charisma",
    "character.skills",
    "scene"
  ],
  "output_format": {
    "story": "string",
    "choice1": "string",
    "choice2": "string",
    "choice3": "string",
    "stat_change1": "string",
    "stat_change2": "string",
    "stat_change3": "string"
  },
  "next_templates": {
    "choice1": [
      "adventure_template"
    ],
    "choice2": [
      "dialogue_template"
    ],
    "choice3": [
      "decision_template"
    ]
  }
}