  "prompt_segments": [
    "(角色姓名{character.姓名})",
    "(背景世界{character.世界})",
    "(角色境界{character.境界})",
    "(全局故事梗概{character.故事梗概})",
    "(当前处于的事件{character.当前事件})",
    "(当前的事件选择{character.事件选择})",
